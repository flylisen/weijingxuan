<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_content_list_title"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_content_list_title"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_content_list_title"
            android:text="2016年7月25～29日喊单盈利102点"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:maxLines="2"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_content_list_user_name"
                android:textSize="14sp"
                android:textColor="@color/colorGray"
                android:text="fmforex"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_content_list_date"
                android:textSize="14sp"
                android:textColor="@color/colorGray"
                android:text="2016-07-30 03:11:34"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
